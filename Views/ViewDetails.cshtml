@model Product

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Product: @Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Product Id: @Model.ProductId</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Price: @Model.Price</h6>
        <h6 class="card-subtitle mb-2 text-muted">Description: @Model.Description</h6>
        <h6 class="card-subtitle mb-2 text-muted">Quantity: @Model.Quantity</h6>
        <h6 class="card-subtitle mb-2 text-muted">Image : @Model.ImagePath</h6>
        <h6 class="card-subtitle mb-2 text-muted">Category Name: @Model.Category!.Name</h6>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-4">Back</a>
    </div>
</div>